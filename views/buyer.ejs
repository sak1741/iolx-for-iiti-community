<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>IOLX</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="stylesheet" href="css/buy.css">
  </head>

  <body class="bg-nav">
      <div class="navbar bg-dark">
        <img src="image/iolx (2) (1).png" class="logo">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/buy">Buyer</a></li>
            <li><a href="/sell">Seller</a></li>
            <%if(id!=0){%>
              <li><a href="/profile">Profile</a></li>
              <li><a href="/register">Logout</a></li>
            <%}else{%>
              <li><a href="/register">Sign Up</a></li>
              <li><a href="/login">Sign In</a></li>
            <%}%>
        </ul>
      </div>
        <div class="album py-5">
          <div class="container">
      
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <% var n=all.length;%>
                <% for(var i=0;i<n;i++){%>
                  <div class="col card">
                  
                    <%var path= "files/"+all[i].path%>
                          <img src=<%=path%> alt=<%=path%>>
                          <div class="card-body">
                            <h4 class="card-title"><%=all[i].productName%></h4>
                            <p class="card-text">
                                <p><%=all[i].details%></p>
                                <h5>Seller: <%=all[i].fName +" "+all[i].sName%></h5>
                                Current Price: <%=all[i].sellingPrice%><br>
                                Original Price: <%=all[i].original%><br>
                                Email: <%=all[i].email%><br>
                                Phone No.: <%=all[i].phoneNo%><br>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                              <div class="btn-group">
                                <form action="/buy" method="post">
                                  <% if(all[i].buyerID!=null){%>
                                    <h1>Already sold</h1>
                                    <%}else{%>
                                      <button class="btn btn-sm btn-outline-secondary" name="chat" value="1"> Chat with owner</button>
                                      <%}%>
                                <button type="submit" class="btn btn-sm btn-outline-secondary" name="wish" value= <%=all[i].listingID%> >Add to wish list</button>
                                </form>
                              </div>
                            </div>
                          </div>
                          
                        
                      </div>
                <%}%>
            </div>
          </div>
        </div>    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>